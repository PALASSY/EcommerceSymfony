{% extends 'base.html.twig' %}

{% block title %}Menu-Shangrila
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5 mt-3 text-center">Nos menus
			<i class="fas fa-hamburger"></i>
		</h1>
		<div class="row">
		
			<div class="col-md-2" id="categoryMenu">
				{% include "food/index/_filtre.html.twig" with {form:form} only %}
			</div>

			<div class="col-md-10" id="containerMenus" style="border-radius:5px;padding:0;">
				<div class="row mt-4">
					{% for food in foods %}
						{% if food.stock < 1 %}
							{% include "food/allfood/_foodenrupturestock.html.twig" with {food:food} only %}
						{% else %}						
							{# Afficher tous les food() #}
							{% include "food/allfood/_foodenstock.html.twig" with {food:food} only %}
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

