{% extends 'admin/base.html.twig' %}
{% form_theme form _self %}

{% block title %}Modification d'une réservation
{% endblock %}

{% block body %}
	<main class="container-fluid mb-5">
		<h1 class="my-5 text-center h2">Modification d'une réservation n°{{reservations.id}}</h1>
		<section class="col-md-8 offset-md-2 mb-5">
			{{form_start(form)}}
			<div class="row">
				{# Affichage la réservation à modifier #}
				<div class="col">
					<div class="card bg-light">
						<div class="card-header">
							<h4 class="card-title text-center">Corriger la réservation ?</h4>
						</div>
						<div class="card-body">
							{{form_row(form.date)}}
              {{form_row(form.commentaire)}}
						</div>
					</div>
				</div>
				{# Affichage  voyageur/annonce liés à cette réservation à modifié #}
				<div class="col">
					{# Rvoyageur #}
					<div class="card bg-light">
						<div class="card-header">
							<h4 class="card-title text-center">Le voyageur</h4>
						</div>
						<div class="card-body">
              {{form_row(form.client)}}
						</div>
					</div><br>
					{# Annonce #}
					<div class="card bg-light">
						<div class="card-header">
							<h4 class="card-title text-center">La table</h4>
						</div>
						<div class="card-body">
            {{form_row(form.tabledisponible)}}
						</div>
					</div>
				</div>
			</div>
      <div class="form-group text-center mt-3">
      	<button type="submit" class="btn btn-danger mt-3">
      		<i class="fas fa-check"></i>
      		Enregistrer</button>
      </div>
			{{form_end(form)}}
		</section>
    <div class="form-group text-center">
  		<a href="{{path("admin_reservations_list")}}" class="btn btn-light mt-3">
  			<i class="fas fa-chevron-left"></i>
  			Retour sur la liste des réservations</a>
 	  </div>

		<br>
		<br>
	</main>

{% endblock %}

