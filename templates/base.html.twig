		<!--Message flash : On va récupérer à l'aide 
		        d'une boucle le label/messages dans le Global app
		        et sa methode flashes -->
		{% for label,messages in app.flashes %}
			<div class="container">
				{% for message in messages %}
					<div class="alert alert-{{label}}">
						<p>{{message|raw}}</p>
					</div>
				{% endfor %}
			</div>
		{% endfor %}


